@model IList<DestinationModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Destinations").Text);
    //page class
    Html.AppendPageCssClassParts("html-destination-list-page");
}
@using Nop.Web.Models.Catalog;
<div class="page destination-list-page">
    <div class="page-title">
        <h1>@T("Destinations.List")</h1>
    </div>
    <div class="page-body">
        <div class="destination-grid">
            <div class="item-grid">
                @foreach (var item in Model)
                {
                    <div class="item-box">
                        <div class="destination-item">
                            <h2 class="title">
                                <a href="@Url.RouteUrl("Destination", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>
                            </h2>
                            <div class="picture">
                                <a href="@Url.RouteUrl("Destination", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
